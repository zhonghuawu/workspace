		iv2.push_back(*it);
		cout << *iv.erase(it) << endl;
		copy(iv.begin(),iv.end(),ostream_iterator<int>(cout," "));cout << endl;
		cout << *iv2.begin() << endl;
		cout << endl;
	}
	const string filename = "/home/huaa/workspace/partten_recognization/iris.data";
	cout << "start..." << endl;
	Decomposition dc;
	dc.readfile(filename);
	dc.run();
//	dc.print_classes();
